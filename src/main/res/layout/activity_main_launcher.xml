<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp">

    <!-- Header with settings button -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Ami-IA Virtual Companion"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="@android:color/white" />

    </RelativeLayout>

    <!-- Central Ami sphere -->
    <ImageView
        android:id="@+id/ballView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/ami_sphere"
        android:contentDescription="Ami Virtual Assistant"
        android:elevation="8dp" />

    <!-- Emotion display -->
    <TextView
        android:id="@+id/emotionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ballView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Â¡Hola! Soy Ami ðŸ˜Š"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Stats layout -->
    <LinearLayout
        android:id="@+id/statsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emotionText"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/happinessLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Felicidad: 75%"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/trustLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confianza: 80%"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Interaction buttons -->
    <LinearLayout
        android:id="@+id/interactionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statsLayout"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="â¤ï¸ Cuidar"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF6B6B"
            style="@style/Widget.AppCompat.Button" />

        <Button
            android:id="@+id/btnTalk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸ’¬ Hablar"
            android:textColor="@android:color/white"
            android:backgroundTint="#4ECDC4"
            style="@style/Widget.AppCompat.Button" />

        <Button
            android:id="@+id/btnIgnore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸ˜” Ignorar"
            android:textColor="@android:color/white"
            android:backgroundTint="#95A5A6"
            style="@style/Widget.AppCompat.Button" />

    </LinearLayout>

    <!-- Floating controls -->
    <LinearLayout
        android:id="@+id/floatingControlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnStartFloating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸŒŸ Modo Flotante"
            android:textColor="@android:color/white"
            android:backgroundTint="#9B59B6"
            style="@style/Widget.AppCompat.Button" />

        <Button
            android:id="@+id/btnStopFloating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸ  Regresar"
            android:textColor="@android:color/white"
            android:backgroundTint="#E67E22"
            style="@style/Widget.AppCompat.Button" />

    </LinearLayout>

</RelativeLayout>
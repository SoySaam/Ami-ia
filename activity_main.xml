<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/mainLayout">

    <!-- Ami's Ball -->
    <ImageView
        android:id="@+id/ballView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ball_shape"
        android:scaleType="centerInside"
        android:elevation="10dp" />

    <!-- Emotion Info -->
    <TextView
        android:id="@+id/emotionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ballView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Ami estÃ¡ despertando..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic" />

    <!-- Interaction Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:text="Cuidar"
            android:background="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnIgnore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:text="Ignorar"
            android:background="#607D8B"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnTalk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:text="Hablar"
            android:background="#2196F3"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/happinessLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Felicidad: 50%"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/trustLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confianza: 50%"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="end" />

    </LinearLayout>

</RelativeLayout>
